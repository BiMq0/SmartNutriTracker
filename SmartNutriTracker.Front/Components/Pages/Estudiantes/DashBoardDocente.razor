@page "/dashboard"
@using SmartNutriTracker.Shared.DTOs.Estudiantes
@using SmartNutriTracker.Shared.Endpoints
@inject HttpClient Http

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Dashboard de Estudiantes</h4>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-2">Cargando estudiantes...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">
                            @errorMessage
                        </div>
                    }
                    else if (estudiantes != null && estudiantes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre Completo</th>
                                        <th>IMC</th>
                                        <th>Estado</th>
                                        <th>Indicador</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var estudiante in estudiantes)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@estudiante.NombreCompleto</strong>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@estudiante.IMC.ToString("F2")</span>
                                            </td>
                                            <td>
                                                <span class="badge @GetBadgeClass(estudiante.CategoriaIMC)">
                                                    @estudiante.CategoriaIMC
                                                </span>
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px; width: 200px;">
                                                    <div class="progress-bar @GetProgressBarClass(estudiante.IMC)" 
                                                         role="progressbar" 
                                                         style="width: @CalculateProgressWidth(estudiante.IMC)%"
                                                         aria-valuenow="@estudiante.IMC" 
                                                         aria-valuemin="15" 
                                                         aria-valuemax="40">
                                                        <small class="fw-bold">@estudiante.IMC.ToString("F1")</small>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-4 p-3 bg-light rounded">
                            <h5>Resumen del Grupo:</h5>
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="card bg-success text-white">
                                        <div class="card-body">
                                            <h4>@estudiantes.Count(e => e.CategoriaIMC == "Normal")</h4>
                                            <p>Peso Normal</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-dark">
                                        <div class="card-body">
                                            <h4>@estudiantes.Count(e => e.CategoriaIMC == "Bajo peso")</h4>
                                            <p>Bajo Peso</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-dark">
                                        <div class="card-body">
                                            <h4>@estudiantes.Count(e => e.CategoriaIMC == "Sobrepeso")</h4>
                                            <p>Sobrepeso</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-danger text-white">
                                        <div class="card-body">
                                            <h4>@estudiantes.Count(e => e.CategoriaIMC == "Obesidad")</h4>
                                            <p>Obesidad</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <p>No hay estudiantes registrados aún.</p>
                            <a href="/registro-estudiante" class="btn btn-primary">Registrar Primer Estudiante</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<EstudianteDashboardItem>? estudiantes;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await CargarDashboard();
    }

    private async Task CargarDashboard()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            estudiantes = await Http.GetFromJsonAsync<List<EstudianteDashboardItem>>(EstudiantesEndpoints.OBTENER_DASHBOARD);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar dashboard: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetBadgeClass(string categoria)
    {
        return categoria switch
        {
            "Bajo peso" => "bg-warning text-dark",
            "Normal" => "bg-success",
            "Sobrepeso" => "bg-warning text-dark",
            "Obesidad" => "bg-danger",
            _ => "bg-secondary"
        };
    }

private string GetProgressBarClass(decimal imc)
{
    if (imc < 18.5m) return "bg-warning";    // ← Agregar 'm'
    if (imc < 25m) return "bg-success";      // ← Agregar 'm'
    if (imc < 30m) return "bg-warning";      // ← Agregar 'm'
    return "bg-danger";
}

    private int CalculateProgressWidth(decimal imc)
    {
        // Escala visual: 15 (mínimo) a 40 (máximo)
        var min = 15m;
        var max = 40m;
        var porcentaje = (imc - min) / (max - min) * 100;
        return Math.Clamp((int)porcentaje, 5, 95); // Mínimo 5% para que se vea
    }

    public class EstudianteDashboardItem
    {
        public int EstudianteId { get; set; }
        public string NombreCompleto { get; set; } = "";
        public decimal IMC { get; set; }
        public string CategoriaIMC { get; set; } = "";
        public bool TieneAlerta { get; set; }
    }
}