@page "/alimentos/registrar"
@using SmartNutriTracker.Shared.DTOs.Alimentos
@inject SmartNutriTracker.Front.Services.Alimentos.AlimentoService AlimentoService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="page-wrapper">
    <header class="app-header">
            <div class="header-band-main">
                <h1 class="header-title">
                    <span class="icon-emoji">üçé</span> Registrar Alimento
                </h1>
                <p class="header-subtitle">Registrar nuevo alimento.</p>
            </div>
            <div class="header-band-bottom"></div>
        </header>
        <main class="edit-main-content">
            <EditForm Model="createDto" OnValidSubmit="RegistrarAlimento" FormName="RegistrarAlimento">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-errors" />

                <div class="edit-form-container">

                    <div class="form-group">
                        <label>Nombre:</label>
                        <InputText class="form-control" @bind-Value="createDto.Nombre" placeholder="Ej: Manzana" />
                        <ValidationMessage For="@(() => createDto.Nombre)" />
                    </div>

                    <div class="form-group">
                        <label>Calor√≠as (kcal):</label>
                        <InputNumber class="form-control" @bind-Value="createDto.Calorias" placeholder="0" />
                        <ValidationMessage For="@(() => createDto.Calorias)" />
                    </div>

                    <div class="form-group">
                        <label>Prote√≠nas (g):</label>
                        <InputNumber class="form-control" @bind-Value="createDto.Proteinas" placeholder="0.00" />
                        <ValidationMessage For="@(() => createDto.Proteinas)" />
                    </div>

                    <div class="form-group">
                        <label>Carbohidratos (g):</label>
                        <InputNumber class="form-control" @bind-Value="createDto.Carbohidratos" placeholder="0.00" />
                        <ValidationMessage For="@(() => createDto.Carbohidratos)" />
                    </div>

                    <div class="form-group">
                        <label>Grasas (g):</label>
                        <InputNumber class="form-control" @bind-Value="createDto.Grasas" placeholder="0.00" />
                        <ValidationMessage For="@(() => createDto.Grasas)" />
                    </div>

                    @if (successMessage != null)
                    {
                        <div class="alert alert-success">
                            ‚úì @successMessage
                        </div>
                    }

                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger">
                            ‚úó @errorMessage
                        </div>
                    }

                    <div class="form-actions">
                        <button type="submit" class="btn-save" disabled="@isSaving">
                            @(isSaving ? "Guardando..." : "Registrar Alimento")
                        </button>

                        <a href="/alimentos" class="btn-cancel">
                            Cancelar
                        </a>
                    </div>

                </div>
            </EditForm>
    </main>
    <footer class="app-footer">
        <div class="footer-band-top"></div>
        <div class="footer-band-main">
            <p>Creado con <span class="footer-icon">üå±</span> para mejorar tu bienestar.</p>
        </div>
    </footer>
</div>

@code {
    private CreateAlimentoDTO createDto = new CreateAlimentoDTO();
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;

    private async Task RegistrarAlimento()
    {
        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;

            Console.WriteLine($"Registrando nuevo alimento");
            Console.WriteLine($"Datos: {System.Text.Json.JsonSerializer.Serialize(createDto)}");

            //Usar el servicio en lugar de HttpClient directo
            var resultado = await AlimentoService.CrearAsync(createDto);

            if (resultado != null)
            {
                successMessage = "¬°Alimento registrado exitosamente!";
                Console.WriteLine($"‚úì Registro exitoso - ID: {resultado.AlimentoId}");
                
                // Esperar 1 segundo para que el usuario vea el mensaje
                await Task.Delay(1000);
                
                // Redirigir a la lista
                NavigationManager.NavigateTo("/alimentos", forceLoad: true);
            }
            else
            {
                errorMessage = "No se pudo registrar el alimento.";
                Console.WriteLine("Error al registrar el alimento");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Excepci√≥n al registrar: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }
}

