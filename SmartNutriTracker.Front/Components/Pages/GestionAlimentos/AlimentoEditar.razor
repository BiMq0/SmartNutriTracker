@page "/alimentos/editar/{AlimentoId:int}"
@using SmartNutriTracker.Shared.DTOs.Alimentos
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3 class="page-title">Editar Alimento</h3>

@if (isLoading)
{
    <p class="loading-text">Cargando información del alimento...</p>
}
else if (updateDto == null)
{
    <p class="error-text">No se pudo cargar el alimento.</p>
}
else
{
    <EditForm Model="updateDto" OnValidSubmit="GuardarCambios" FormName="EditarAlimento">
        <DataAnnotationsValidator />
        <ValidationSummary class="validation-errors" />

        <div class="edit-form-container">

            <div class="form-group">
                <label>Nombre:</label>
                <InputText class="form-control" @bind-Value="updateDto.Nombre" />
                <ValidationMessage For="@(() => updateDto.Nombre)" />
            </div>

            <div class="form-group">
                <label>Calorías (kcal):</label>
                <InputNumber class="form-control" @bind-Value="updateDto.Calorias" />
                <ValidationMessage For="@(() => updateDto.Calorias)" />
            </div>

            <div class="form-group">
                <label>Proteínas (g):</label>
                <InputNumber class="form-control" @bind-Value="updateDto.Proteinas" />
                <ValidationMessage For="@(() => updateDto.Proteinas)" />
            </div>

            <div class="form-group">
                <label>Carbohidratos (g):</label>
                <InputNumber class="form-control" @bind-Value="updateDto.Carbohidratos" />
                <ValidationMessage For="@(() => updateDto.Carbohidratos)" />
            </div>

            <div class="form-group">
                <label>Grasas (g):</label>
                <InputNumber class="form-control" @bind-Value="updateDto.Grasas" />
                <ValidationMessage For="@(() => updateDto.Grasas)" />
            </div>

            @if (successMessage != null)
            {
                <div class="alert alert-success">
                    ✓ @successMessage
                </div>
            }

            @if (errorMessage != null)
            {
                <div class="alert alert-danger">
                    ✗ @errorMessage
                </div>
            }

            <div class="form-actions">
                <button type="submit" class="btn-save" disabled="@isSaving">
                    @(isSaving ? "Guardando..." : "Guardar Cambios")
                </button>

                <a href="/alimentos" class="btn-cancel">
                    Cancelar
                </a>
            </div>

        </div>
    </EditForm>
}

@code {
    [Parameter] public int AlimentoId { get; set; }

    private UpdateAlimentoDTO? updateDto;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            // Obtener el alimento actual
            var alimento = await Http.GetFromJsonAsync<AlimentoDTO>($"https://localhost:7187/api/alimentos/GetById/{AlimentoId}");

            if (alimento != null)
            {
                // Mapear a UpdateAlimentoDTO
                updateDto = new UpdateAlimentoDTO
                {
                    AlimentoId = alimento.AlimentoId,
                    Nombre = alimento.Nombre,
                    Calorias = alimento.Calorias,
                    Proteinas = alimento.Proteinas,
                    Carbohidratos = alimento.Carbohidratos,
                    Grasas = alimento.Grasas
                };
            }
            else
            {
                errorMessage = "No se encontró el alimento.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar el alimento: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task GuardarCambios()
    {
        if (updateDto == null) return;

        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;

            Console.WriteLine($"Enviando PUT a: https://localhost:7187/api/Alimento/{updateDto.AlimentoId}");
            Console.WriteLine($"Datos: {System.Text.Json.JsonSerializer.Serialize(updateDto)}");

            var response = await Http.PutAsJsonAsync($"https://localhost:7187/api/alimentos/Update/{updateDto.AlimentoId}", updateDto);

            if (response.IsSuccessStatusCode)
            {
                successMessage = "¡Alimento actualizado exitosamente!";
                Console.WriteLine("✓ Actualización exitosa");
                
                // Esperar 1 segundo para que el usuario vea el mensaje
                await Task.Delay(1000);
                
                // Redirigir a la lista
                NavigationManager.NavigateTo("/alimentos", forceLoad: true);
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error {response.StatusCode}: No se pudo actualizar el alimento.";
                Console.WriteLine($"Error al actualizar: {response.StatusCode} - {content}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Excepción al guardar: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }
}

