@page "/alimentos/editar/{AlimentoId:int}"
@using SmartNutriTracker.Shared.DTOs.Alimentos
@inject SmartNutriTracker.Front.Services.Alimentos.AlimentoService AlimentoService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="page-wrapper">
    <header class="app-header">
        <div class="header-band-main">
            <h1 class="header-title">
                <span class="icon-emoji">üçé</span> Editar Alimento
            </h1>
            <p class="header-subtitle">Modifica la informaci√≥n nutricional del alimento.</p>
        </div>
        <div class="header-band-bottom"></div>
    </header>

    <main class="edit-main-content">
        @if (isLoading)
        {
            <p class="loading-text">Cargando informaci√≥n del alimento...</p>
        }
        else if (updateDto == null)
        {
            <p class="error-text">No se pudo cargar el alimento.</p>
        }
        else
        {
            <EditForm Model="updateDto" OnValidSubmit="GuardarCambios" FormName="EditarAlimento">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-errors" />

                <div class="edit-form-container">

                    <div class="form-group">
                        <label>Nombre:</label>
                        <InputText class="form-control" @bind-Value="updateDto.Nombre" />
                        <ValidationMessage For="@(() => updateDto.Nombre)" />
                    </div>

                    <div class="form-group">
                        <label>Calor√≠as (kcal):</label>
                        <InputNumber class="form-control" @bind-Value="updateDto.Calorias" />
                        <ValidationMessage For="@(() => updateDto.Calorias)" />
                    </div>

                    <div class="form-group">
                        <label>Prote√≠nas (g):</label>
                        <InputNumber class="form-control" @bind-Value="updateDto.Proteinas" />
                        <ValidationMessage For="@(() => updateDto.Proteinas)" />
                    </div>

                    <div class="form-group">
                        <label>Carbohidratos (g):</label>
                        <InputNumber class="form-control" @bind-Value="updateDto.Carbohidratos" />
                        <ValidationMessage For="@(() => updateDto.Carbohidratos)" />
                    </div>

                    <div class="form-group">
                        <label>Grasas (g):</label>
                        <InputNumber class="form-control" @bind-Value="updateDto.Grasas" />
                        <ValidationMessage For="@(() => updateDto.Grasas)" />
                    </div>

                    @if (successMessage != null)
                    {
                        <div class="alert alert-success">
                            ‚úì @successMessage
                        </div>
                    }

                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger">
                            ‚úó @errorMessage
                        </div>
                    }

                    <div class="form-actions">
                        <button type="submit" class="btn-save" disabled="@isSaving">
                            @(isSaving ? "Guardando..." : "Guardar Cambios")
                        </button>

                        <a href="/alimentos" class="btn-cancel">
                            Cancelar
                        </a>
                    </div>

                </div>
            </EditForm>
        }
    </main>

    <footer class="app-footer">
        <div class="footer-band-top"></div>
        <div class="footer-band-main">
            <p>Creado con <span class="footer-icon">üå±</span> para mejorar tu bienestar.</p>
        </div>
    </footer>
</div>

@code {
    [Parameter] public int AlimentoId { get; set; }

    private UpdateAlimentoDTO? updateDto;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var alimento = await AlimentoService.ObtenerPorIdAsync(AlimentoId);

            if (alimento != null)
            {
                updateDto = new UpdateAlimentoDTO
                {
                    AlimentoId = alimento.AlimentoId,
                    Nombre = alimento.Nombre,
                    Calorias = alimento.Calorias,
                    Proteinas = alimento.Proteinas,
                    Carbohidratos = alimento.Carbohidratos,
                    Grasas = alimento.Grasas
                };
            }
            else
            {
                errorMessage = "No se encontr√≥ el alimento.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar el alimento: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task GuardarCambios()
    {
        if (updateDto == null) return;

        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;

            Console.WriteLine($"Actualizando alimento ID: {updateDto.AlimentoId}");

            var resultado = await AlimentoService.ActualizarAsync(updateDto.AlimentoId, updateDto);

            if (resultado != null)
            {
                successMessage = "¬°Alimento actualizado exitosamente!";
                Console.WriteLine("‚úì Actualizaci√≥n exitosa");
                
                await Task.Delay(1000);
                NavigationManager.NavigateTo("/alimentos", forceLoad: true);
            }
            else
            {
                errorMessage = "No se pudo actualizar el alimento.";
                Console.WriteLine("Error al actualizar el alimento");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Excepci√≥n al guardar: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }
}

