@page "/menus/crear"
@using SmartNutriTracker.Shared.DTOs.Menus
@using SmartNutriTracker.Shared.DTOs.Alimentos
@inject SmartNutriTracker.Front.Services.Menus.MenuService MenuService
@inject SmartNutriTracker.Front.Services.Alimentos.AlimentoService AlimentoService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3 class="page-title">Crear Menú Diario</h3>

@if (isLoadingAlimentos)
{
    <p class="loading-text">Cargando alimentos disponibles...</p>
}
else
{
    <EditForm Model="createDto" OnValidSubmit="CrearMenu" FormName="CrearMenu">
        <DataAnnotationsValidator />
        @if (mostrarErrorAlimentos)
        {
            <div class="validation-errors">
                <ul>
                    <li>Debe incluir al menos un alimento.</li>
                </ul>
            </div>
        }

        <div class="edit-form-container">

            <div class="form-group">
                <label>Fecha del Menú:</label>
                <InputDate class="form-control" 
                        @bind-Value="createDto.Fecha" 
                        min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <ValidationMessage For="@(() => createDto.Fecha)" />
            </div>

            <div class="form-group">
                <label>Selecciona los Alimentos:</label>
                <div class="alimentos-selection-container">
                    @if (alimentosDisponibles == null || !alimentosDisponibles.Any())
                    {
                        <p class="no-alimentos-text">No hay alimentos disponibles. <a href="/alimentos/registrar">Crear alimento</a></p>
                    }
                    else
                    {
                        @foreach (var alimento in alimentosDisponibles)
                        {
                            var isSelected = alimentosSeleccionados.Contains(alimento.AlimentoId);
                            <div class="alimento-checkbox-item @(isSelected ? "selected" : "")">
                                <label>
                                    <input type="checkbox" 
                                           checked="@isSelected"
                                           @onchange="@(() => ToggleAlimento(alimento.AlimentoId))" />
                                    <span class="alimento-nombre">@alimento.Nombre</span>
                                    <span class="alimento-calorias">(@alimento.Calorias kcal)</span>
                                </label>
                            </div>
                        }
                    }
                </div>
                @if (alimentosSeleccionados.Count == 0)
                {
                    <small class="validation-message">Debes seleccionar al menos un alimento</small>
                }
            </div>

            @if (alimentosSeleccionados.Count > 0)
            {
                <div class="resumen-seleccion">
                    <h5>Resumen del Menú</h5>
                    <div class="resumen-grid">
                        <div class="resumen-item">
                            <span class="resumen-label">Alimentos:</span>
                            <span class="resumen-value">@alimentosSeleccionados.Count</span>
                        </div>
                        <div class="resumen-item">
                            <span class="resumen-label">Calorías Totales:</span>
                            <span class="resumen-value">@CalcularCaloriasTotales() kcal</span>
                        </div>
                        <div class="resumen-item">
                            <span class="resumen-label">Proteínas:</span>
                            <span class="resumen-value">@CalcularProteinasTotales() g</span>
                        </div>
                        <div class="resumen-item">
                            <span class="resumen-label">Carbohidratos:</span>
                            <span class="resumen-value">@CalcularCarbohidratosTotales() g</span>
                        </div>
                        <div class="resumen-item">
                            <span class="resumen-label">Grasas:</span>
                            <span class="resumen-value">@CalcularGrasasTotales() g</span>
                        </div>
                    </div>
                </div>
            }

            @if (successMessage != null)
            {
                <div class="alert alert-success">
                    ✓ @successMessage
                </div>
            }

            @if (errorMessage != null)
            {
                <div class="alert alert-danger">
                    ✗ @errorMessage
                </div>
            }

            <div class="form-actions">
                <button type="submit" class="btn-save" disabled="@(isSaving || alimentosSeleccionados.Count == 0)">
                    @(isSaving ? "Guardando..." : "Crear Menú")
                </button>

                <a href="/menus" class="btn-cancel">
                    Cancelar
                </a>
            </div>

        </div>
    </EditForm>
}

@code {
    private CreateMenuDTO createDto = new CreateMenuDTO { Fecha = DateTime.Today };
    private List<AlimentoDTO>? alimentosDisponibles;
    private HashSet<int> alimentosSeleccionados = new();
    private bool isLoadingAlimentos = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;
    private bool mostrarErrorAlimentos = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarAlimentos();
    }

    private async Task CargarAlimentos()
    {
        try
        {
            isLoadingAlimentos = true;
            
            // ✅ Usar el servicio en lugar de HttpClient directo
            alimentosDisponibles = await AlimentoService.ObtenerTodosAsync();
            
            if (alimentosDisponibles == null)
            {
                alimentosDisponibles = new List<AlimentoDTO>();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar alimentos: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
            alimentosDisponibles = new List<AlimentoDTO>();
        }
        finally
        {
            isLoadingAlimentos = false;
        }
    }

    private void ToggleAlimento(int alimentoId)
    {
        if (alimentosSeleccionados.Contains(alimentoId))
        {
            alimentosSeleccionados.Remove(alimentoId);
        }
        else
        {
            alimentosSeleccionados.Add(alimentoId);
        }
        
        // Ocultar error si ahora hay alimentos seleccionados
        if (alimentosSeleccionados.Count > 0)
        {
            mostrarErrorAlimentos = false;
        }
    }

    private int CalcularCaloriasTotales()
    {
        return alimentosDisponibles?
            .Where(a => alimentosSeleccionados.Contains(a.AlimentoId))
            .Sum(a => a.Calorias) ?? 0;
    }

    private decimal CalcularProteinasTotales()
    {
        return alimentosDisponibles?
            .Where(a => alimentosSeleccionados.Contains(a.AlimentoId))
            .Sum(a => a.Proteinas) ?? 0;
    }

    private decimal CalcularCarbohidratosTotales()
    {
        return alimentosDisponibles?
            .Where(a => alimentosSeleccionados.Contains(a.AlimentoId))
            .Sum(a => a.Carbohidratos) ?? 0;
    }

    private decimal CalcularGrasasTotales()
    {
        return alimentosDisponibles?
            .Where(a => alimentosSeleccionados.Contains(a.AlimentoId))
            .Sum(a => a.Grasas) ?? 0;
    }

    private async Task CrearMenu()
    {
        // Validar que haya alimentos seleccionados
        if (alimentosSeleccionados.Count == 0)
        {
            mostrarErrorAlimentos = true;
            errorMessage = "Debes seleccionar al menos un alimento para crear el menú.";
            return;
        }

        try
        {
            isSaving = true;
            errorMessage = null;
            successMessage = null;
            mostrarErrorAlimentos = false;

            // Asignar los IDs de alimentos seleccionados
            createDto.AlimentoIds = alimentosSeleccionados.ToList();

            Console.WriteLine($"Creando menú para fecha: {createDto.Fecha}");
            Console.WriteLine($"AlimentoIds: [{string.Join(", ", createDto.AlimentoIds)}]");

            // ✅ Usar el servicio en lugar de HttpClient directo
            var menuId = await MenuService.CrearAsync(createDto);

            if (menuId.HasValue)
            {
                successMessage = "¡Menú creado exitosamente!";
                Console.WriteLine($"✓ Menú creado correctamente - ID: {menuId}");
                
                await Task.Delay(1000);
                NavigationManager.NavigateTo("/menus", forceLoad: true);
            }
            else
            {
                errorMessage = "No se pudo crear el menú.";
                Console.WriteLine("Error al crear el menú");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Excepción al crear: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }
}

