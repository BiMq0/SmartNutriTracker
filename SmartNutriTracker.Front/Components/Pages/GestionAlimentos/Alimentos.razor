@page "/alimentos"
@inject NavigationManager NavigationManager
@using SmartNutriTracker.Shared.DTOs.Alimentos
@inject SmartNutriTracker.Front.Services.Alimentos.AlimentoService AlimentoService
@rendermode InteractiveServer

<div class="page-wrapper">
    <header class="app-header">
        <div class="header-band-main">
            <h1 class="header-title">
                <span class="icon-emoji">üçé</span> Seguimiento de Alimentos
            </h1>
            <p class="header-subtitle">Consulta y gestiona la informaci√≥n nutricional de tus alimentos.</p>
        </div>
        <div class="header-band-bottom"></div>
    </header>
    
    <main class="alimentos-main-content">
        <div class="page-header-section">
            <h3 class="page-title">Detalles Nutricionales</h3>
            <a href="/alimentos/registrar" class="btn-add-alimento">
                <span class="btn-icon">‚ûï</span> Agregar Alimento
            </a>
        </div>

        @if (alimentos == null)
        {
            <p class="loading-text">Cargando datos de alimentos...</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table alimentos-table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th class="text-end">Calor√≠as (kcal)</th>
                            <th class="text-end">Prote√≠nas (g)</th>
                            <th class="text-end">Carbohidratos (g)</th>
                            <th class="text-end">Grasas (g)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in alimentos)
                        {
                            <tr>
                                <td class="id-col">@item.AlimentoId</td>
                                <td class="name-col"><strong>@item.Nombre</strong></td>
                                <td class="text-end">@item.Calorias</td>
                                <td class="text-end">@item.Proteinas</td>
                                <td class="text-end">@item.Carbohidratos</td>
                                <td class="text-end">@item.Grasas</td>
                                <td class="text-center">
                                    <a class="btn-edit" href="/alimentos/editar/@item.AlimentoId">Editar</a>
                                    <button type="button" class="btn-delete" @onclick="@(() => MostrarModalEliminar(item))">Eliminar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </main>

    <!-- Modal de confirmaci√≥n de eliminaci√≥n -->
    @if (mostrarModal)
    {
        <div class="modal-overlay" @onclick="CerrarModal">
            <div class="modal-content" @onclick:stopPropagation>
                <div class="modal-header">
                    <h4>‚ö†Ô∏è Confirmar Eliminaci√≥n</h4>
                </div>
                <div class="modal-body">
                    <p>¬øEst√°s seguro de que deseas eliminar el alimento <strong>"@alimentoAEliminar?.Nombre"</strong>?</p>
                    <p class="modal-warning">Esta acci√≥n no se puede deshacer.</p>
                </div>
                <div class="modal-footer">
                    <button class="btn-modal-cancel" @onclick="CerrarModal">Cancelar</button>
                    <button class="btn-modal-confirm" @onclick="ConfirmarEliminar">Eliminar</button>
                </div>
            </div>
        </div>
    }

    <footer class="app-footer">
        <div class="footer-band-top"></div>
        <div class="footer-band-main">
            <p>Creado con <span class="footer-icon">üå±</span> para mejorar tu bienestar.</p>
        </div>
    </footer>
</div>

@code {
    private List<AlimentoDTO>? alimentos;
    private bool mostrarModal = false;
    private AlimentoDTO? alimentoAEliminar;

    private void MostrarModalEliminar(AlimentoDTO alimento)
    {
        alimentoAEliminar = alimento;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        alimentoAEliminar = null;
    }

    private async Task ConfirmarEliminar()
    {
        if (alimentoAEliminar == null) return;

        try
        {
            // ‚úÖ Usar el servicio en lugar de HttpClient directo
            var success = await AlimentoService.EliminarAsync(alimentoAEliminar.AlimentoId);
            
            if (success)
            {
                Console.WriteLine($"‚úì Alimento {alimentoAEliminar.AlimentoId} eliminado correctamente");
                await CargarAlimentos();
            }
            else
            {
                Console.WriteLine($"Error al eliminar alimento {alimentoAEliminar.AlimentoId}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Excepci√≥n al eliminar alimento {alimentoAEliminar.AlimentoId}: {ex.Message}");
        }
        finally
        {
            CerrarModal();
        }
    }

    private async Task CargarAlimentos()
    {
        try
        {
            // ‚úÖ Usar el servicio en lugar de HttpClient directo
            alimentos = await AlimentoService.ObtenerTodosAsync();
            
            if (alimentos == null)
            {
                alimentos = new List<AlimentoDTO>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar alimentos: {ex.Message}");
            alimentos = new List<AlimentoDTO>();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarAlimentos();
    }
}

