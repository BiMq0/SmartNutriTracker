                        @foreach (var comida in recomendacion.Comidas)
                        {
                            <li class="item-comida">
                                <div class="nombre-comida">@comida.Nombre</div>
                                <div class="stats-comida">
                                    <div class="stat-item">üî• Calor√≠as: @comida.Calorias kcal</div>
