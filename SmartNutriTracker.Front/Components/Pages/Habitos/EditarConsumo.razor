@page "/alimentos/editar/{registroHabitoId:int}"
@rendermode InteractiveServer
@using SmartNutriTracker.Shared.DTOs.Alimentos
@using SmartNutriTracker.Front.Services 
@inject RegistroAlimentoService RegistroAlimentoService
@inject AlimentosService AlimentosService
@inject TipoComidaService TipoComidaService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header header-custom">
            <h3 class="mb-0">‚úèÔ∏è Editar lo que comiste</h3>
        </div>
        
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border" style="color: var(--color-accent);" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2" style="color: var(--color-secondary);">Cargando tus datos...</p>
                </div>
            }
            else if (consumo == null)
            {
                <div class="alert alert-danger">
                    ‚ùå No encontramos ese registro
                </div>
                <button type="button" class="btn btn-secondary-custom" @onclick="VolverAHistorial">
                    ‚Ü©Ô∏è Volver al historial
                </button>
            }
            else if (isLoadingCatalogos)
            {
                <div class="text-center py-4">
                    <div class="spinner-border" style="color: var(--color-primary);" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2" style="color: var(--color-secondary);">Cargando opciones...</p>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <div class="alert alert-info-custom">
                        <strong>üìÖ Registro del @consumo.Fecha.ToString("dd/MM/yyyy") a las @consumo.Fecha.ToString("HH:mm")</strong>
                    </div>
                </div>
                
                <EditForm Model="@dtoActualizacion" OnValidSubmit="@ActualizarConsumo" FormName="EditarAlimentoForm">
                    
                    <h5 class="mt-4 mb-3" style="color: var(--color-secondary);">
                        <span style="font-size: 1.5rem;">üçΩÔ∏è</span> ¬øQu√© comiste?
                    </h5>
                    
                    @for (int i = 0; i < dtoActualizacion.AlimentosConsumidos.Count; i++)
                    {
                        var index = i;
                        <div class="card card-alimento mb-3">
                            <div class="card-header card-header-alimento">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Alimento #@(index + 1)</span>
                                    @if (dtoActualizacion.AlimentosConsumidos.Count > 1)
                                    {
                                        <button type="button" class="btn btn-sm btn-danger-custom" 
                                                @onclick="() => EliminarAlimento(index)">
                                            üóëÔ∏è Quitar
                                        </button>
                                    }
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label form-label-custom">¬øQu√© alimento fue? *</label>
                                            <select class="form-select form-select-custom" @bind="dtoActualizacion.AlimentosConsumidos[index].AlimentoId">
                                                <option value="0">-- Selecciona un alimento --</option>
                                                @foreach (var alimento in alimentos)
                                                {
                                                    <option value="@alimento.AlimentoId">
                                                        @alimento.Nombre (@alimento.Calorias kcal)
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label form-label-custom">¬øEn qu√© comida? *</label>
                                            <select class="form-select form-select-custom" @bind="dtoActualizacion.AlimentosConsumidos[index].TipoComidaId">
                                                <option value="0">-- Selecciona --</option>
                                                @foreach (var tipo in tiposComida)
                                                {
                                                    <option value="@tipo.TipoComidaId">@tipo.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label form-label-custom">¬øCu√°nto comiste? (gramos) *</label>
                                            <input type="number" class="form-control form-control-custom" 
                                                   @bind="dtoActualizacion.AlimentosConsumidos[index].Cantidad" 
                                                   min="1" step="1" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div class="mt-3 mb-4">
                        <button type="button" class="btn btn-primary-custom" @onclick="AgregarAlimento">
                            ‚ûï Agregar otro alimento
                        </button>
                    </div>
                    
                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-warning-custom" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                <span>Guardando...</span>
                            }
                            else
                            {
                                <span>üíæ Guardar cambios</span>
                            }
                        </button>
                        
                        <button type="button" class="btn btn-secondary-custom" @onclick="VolverAHistorial">
                            ‚Ü©Ô∏è Cancelar
                        </button>
                    </div>
                </EditForm>
                
                @if (!string.IsNullOrEmpty(mensajeExito))
                {
                    <div class="alert alert-success mt-3">
                        ‚úÖ @mensajeExito
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="alert alert-danger mt-3">
                        ‚ùå @mensajeError
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int registroHabitoId { get; set; }
    
    private RegistroConsumoDTO? consumo;
    
    [SupplyParameterFromForm]
    private RegistroConsumoActualizarDTO dtoActualizacion { get; set; } = new();
    
    private List<AlimentosDTO> alimentos = new();
    private List<TipoComidaDTO> tiposComida = new();
    private bool isLoading = true;
    private bool isLoadingCatalogos = true;
    private bool isSubmitting = false;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;
    
    protected override async Task OnInitializedAsync()
    {
        await CargarConsumo();
        await CargarCatalogos();
    }
    
    private async Task CargarConsumo()
    {
        isLoading = true;
        
        try
        {
            consumo = await RegistroAlimentoService.ObtenerPorIdAsync(registroHabitoId);
            
            if (consumo != null)
            {
                dtoActualizacion.Fecha = DateOnly.FromDateTime(consumo.Fecha);
                dtoActualizacion.Hora = TimeOnly.FromDateTime(consumo.Fecha);
                
                dtoActualizacion.AlimentosConsumidos = consumo.AlimentosConsumidos.Select(a => new RegistroAlimentoItemDTO
                {
                    AlimentoId = a.AlimentoId,
                    TipoComidaId = a.TipoComidaId,
                    Cantidad = a.Cantidad
                }).ToList();
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error cargando consumo: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task CargarCatalogos()
    {
        try
        {
            var alimentosTask = AlimentosService.ObtenerTodosAsync();
            var tiposComidaTask = TipoComidaService.ObtenerTodosAsync();
            
            await Task.WhenAll(alimentosTask, tiposComidaTask);
            
            alimentos = await alimentosTask ?? new List<AlimentosDTO>();
            tiposComida = await tiposComidaTask ?? new List<TipoComidaDTO>();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error cargando cat√°logos: {ex.Message}";
        }
        finally
        {
            isLoadingCatalogos = false;
        }
    }
    
    private void AgregarAlimento()
    {
        dtoActualizacion.AlimentosConsumidos.Add(new RegistroAlimentoItemDTO());
    }
    
    private void EliminarAlimento(int index)
    {
        if (dtoActualizacion.AlimentosConsumidos.Count > 1)
        {
            dtoActualizacion.AlimentosConsumidos.RemoveAt(index);
        }
    }
    
    private async Task ActualizarConsumo()
    {
        isSubmitting = true;
        mensajeExito = string.Empty;
        mensajeError = string.Empty;
        
        try
        {
            var resultado = await RegistroAlimentoService.ActualizarConsumoAsync(registroHabitoId, dtoActualizacion);
            
            if (resultado)
            {
                mensajeExito = "¬°Listo! Actualizamos tu registro";
                await Task.Delay(1000);
                isSubmitting = false;
                VolverAHistorial();
            }
            else
            {
                mensajeError = "Hubo un problema al guardar. Intenta de nuevo.";
                isSubmitting = false;
            }
        }
        catch (Exception ex)
        {
            if (ex.GetType().Name != "NavigationException")
            {
                mensajeError = $"Error: {ex.Message}";
            }
            isSubmitting = false;
        }
    }
    
    private void VolverAHistorial()
    {
        if (consumo != null)
        {
            Navigation.NavigateTo($"/alimentos/historial/{consumo.EstudianteId}");
        }
        else
        {
            Navigation.NavigateTo("/alimentos/historial");
        }
    }
}

