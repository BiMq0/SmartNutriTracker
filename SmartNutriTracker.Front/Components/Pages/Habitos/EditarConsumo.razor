@page "/alimentos/editar/{registroHabitoId:int}"
@rendermode InteractiveServer
@using SmartNutriTracker.Shared.DTOs.Alimentos
@using SmartNutriTracker.Front.Services 
@inject RegistroAlimentoService RegistroAlimentoService
@inject AlimentoService AlimentoService
@inject TipoComidaService TipoComidaService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">üçΩÔ∏è Editar Consumo de Alimentos</h3>
        </div>
        
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-warning" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando datos del consumo...</p>
                </div>
            }
            else if (consumo == null)
            {
                <div class="alert alert-danger">
                    ‚ùå No se encontr√≥ el consumo con ID @registroHabitoId
                </div>
                <button type="button" class="btn btn-secondary" @onclick="VolverAHistorial">
                    ‚Ü©Ô∏è Volver al Historial
                </button>
            }
            else if (isLoadingCatalogos)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando cat√°logos...</p>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <div class="alert alert-info">
                        <strong>Editando consumo del estudiante @consumo.EstudianteId</strong>
                        <br/>Fecha: @consumo.Fecha.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
                
                <EditForm Model="@dtoActualizacion" OnValidSubmit="@ActualizarConsumo" FormName="EditarAlimentoForm">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nueva Fecha</label>
                                <input type="date" class="form-control" 
                                       value="@fechaString"
                                       @onchange="@((ChangeEventArgs e) => fechaString = e.Value?.ToString() ?? string.Empty)" />
                                <small class="text-muted">Actual: @DateOnly.FromDateTime(consumo.Fecha).ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nueva Hora</label>
                                <input type="time" class="form-control" 
                                       value="@horaString"
                                       @onchange="@((ChangeEventArgs e) => horaString = e.Value?.ToString() ?? string.Empty)" />
                                <small class="text-muted">Actual: @TimeOnly.FromDateTime(consumo.Fecha).ToString("HH:mm")</small>
                            </div>
                        </div>
                    </div>
                    
                    <h5 class="mt-4 mb-3">üçé Alimentos Consumidos</h5>
                    
                    @for (int i = 0; i < dtoActualizacion.AlimentosConsumidos.Count; i++)
                    {
                        var index = i;
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Alimento @(index + 1)</span>
                                    @if (dtoActualizacion.AlimentosConsumidos.Count > 1)
                                    {
                                        <button type="button" class="btn btn-sm btn-danger" 
                                                @onclick="() => EliminarAlimento(index)">
                                            üóëÔ∏è Eliminar
                                        </button>
                                    }
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label">Alimento *</label>
                                            <InputSelect class="form-select" @bind-Value="dtoActualizacion.AlimentosConsumidos[index].AlimentoId">
                                                <option value="0">-- Seleccionar --</option>
                                                @foreach (var alimento in alimentos)
                                                {
                                                    <option value="@alimento.AlimentoId">
                                                        @alimento.Nombre (@alimento.Calorias kcal)
                                                    </option>
                                                }
                                            </InputSelect>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label">Tipo de Comida *</label>
                                            <InputSelect class="form-select" @bind-Value="dtoActualizacion.AlimentosConsumidos[index].TipoComidaId">
                                                <option value="0">-- Seleccionar --</option>
                                                @foreach (var tipo in tiposComida)
                                                {
                                                    <option value="@tipo.TipoComidaId">
                                                        @tipo.Nombre
                                                    </option>
                                                }
                                            </InputSelect>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label">Cantidad (g) *</label>
                                            <InputNumber class="form-control" @bind-Value="dtoActualizacion.AlimentosConsumidos[index].Cantidad" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div class="mt-3 mb-4">
                        <button type="button" class="btn btn-outline-primary" @onclick="AgregarAlimento">
                            ‚ûï Agregar Otro Alimento
                        </button>
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-warning me-2" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                <span>Actualizando...</span>
                            }
                            else
                            {
                                <span>üíæ Guardar Cambios</span>
                            }
                        </button>
                        
                        <button type="button" class="btn btn-secondary" @onclick="VolverAHistorial">
                            ‚Ü©Ô∏è Cancelar
                        </button>
                    </div>
                </EditForm>
                
                @if (!string.IsNullOrEmpty(mensajeExito))
                {
                    <div class="alert alert-success mt-3">
                        ‚úÖ @mensajeExito
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="alert alert-danger mt-3">
                        ‚ùå @mensajeError
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int registroHabitoId { get; set; }
    
    private RegistroConsumoDTO? consumo;
    
    [SupplyParameterFromForm]
    private RegistroConsumoActualizarDTO dtoActualizacion { get; set; } = new();
    
    private List<AlimentoDTO> alimentos = new();
    private List<TipoComidaDTO> tiposComida = new();
    private bool isLoading = true;
    private bool isLoadingCatalogos = true;
    private bool isSubmitting = false;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;
    
    private string fechaString = string.Empty;
    private string horaString = string.Empty;
    
    protected override async Task OnInitializedAsync()
    {
        await CargarConsumo();
        await CargarCatalogos();
    }
    
    private async Task CargarConsumo()
    {
        isLoading = true;
        
        try
        {
            consumo = await RegistroAlimentoService.ObtenerPorIdAsync(registroHabitoId);
            
            if (consumo != null)
            {
                dtoActualizacion.Fecha = DateOnly.FromDateTime(consumo.Fecha);
                dtoActualizacion.Hora = TimeOnly.FromDateTime(consumo.Fecha);
                fechaString = $"{dtoActualizacion.Fecha:yyyy-MM-dd}";
                horaString = $"{dtoActualizacion.Hora:HH:mm}";
                
                dtoActualizacion.AlimentosConsumidos = consumo.AlimentosConsumidos.Select(a => new RegistroAlimentoItemDTO
                {
                    AlimentoId = a.AlimentoId,
                    TipoComidaId = a.TipoComidaId,
                    Cantidad = a.Cantidad
                }).ToList();
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error cargando consumo: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task CargarCatalogos()
    {
        try
        {
            var alimentosTask = AlimentoService.ObtenerTodosAsync();
            var tiposComidaTask = TipoComidaService.ObtenerTodosAsync();
            
            await Task.WhenAll(alimentosTask, tiposComidaTask);
            
            alimentos = await alimentosTask ?? new List<AlimentoDTO>();
            tiposComida = await tiposComidaTask ?? new List<TipoComidaDTO>();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error cargando cat√°logos: {ex.Message}";
        }
        finally
        {
            isLoadingCatalogos = false;
        }
    }
    
    private void AgregarAlimento()
    {
        dtoActualizacion.AlimentosConsumidos.Add(new RegistroAlimentoItemDTO());
    }
    
    private void EliminarAlimento(int index)
    {
        if (dtoActualizacion.AlimentosConsumidos.Count > 1)
        {
            dtoActualizacion.AlimentosConsumidos.RemoveAt(index);
        }
    }
    
    private async Task ActualizarConsumo()
    {
        isSubmitting = true;
        mensajeExito = string.Empty;
        mensajeError = string.Empty;
        
        try
        {
            if (DateOnly.TryParse(fechaString, out var fecha))
            {
                dtoActualizacion.Fecha = fecha;
            }
            if (TimeOnly.TryParse(horaString, out var hora))
            {
                dtoActualizacion.Hora = hora;
            }
            
            var resultado = await RegistroAlimentoService.ActualizarConsumoAsync(registroHabitoId, dtoActualizacion);
            
            if (resultado)
            {
                mensajeExito = "Consumo actualizado exitosamente!";
                await Task.Delay(1500);
                VolverAHistorial();
            }
            else
            {
                mensajeError = "Error al actualizar el consumo. Intente nuevamente.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
    
    private void VolverAHistorial()
    {
        if (consumo != null)
        {
            Navigation.NavigateTo($"/alimentos/historial/{consumo.EstudianteId}");
        }
        else
        {
            Navigation.NavigateTo("/alimentos/historial");
        }
    }
}