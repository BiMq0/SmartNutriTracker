@page "/habitos/editar/{registroHabitoId:int}"
@rendermode InteractiveServer
@using SmartNutriTracker.Shared.DTOs.Habitos
@using SmartNutriTracker.Front.Services
@inject RegistroHabitoService RegistroHabitoService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header header-custom">
            <h3 class="mb-0">‚úèÔ∏è Editar tus h√°bitos</h3>
        </div>
        
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border" style="color: var(--color-accent);" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2" style="color: var(--color-secondary);">Cargando tus datos...</p>
                </div>
            }
            else if (habito == null)
            {
                <div class="alert alert-danger">
                    ‚ùå No encontramos ese registro
                </div>
                <button class="btn btn-secondary-custom" @onclick="VolverAHistorial">
                    ‚Ü©Ô∏è Volver al historial
                </button>
            }
            else
            {
                <div class="mb-4">
                    <div class="alert alert-info-custom">
                        <strong>üìÖ Registro del @habito.Fecha.ToString("dd/MM/yyyy") a las @habito.Fecha.ToString("HH:mm")</strong>
                    </div>
                </div>
                
                <EditForm Model="@dtoActualizacion" OnValidSubmit="@ActualizarHabito" FormName="EditarHabitoForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label form-label-custom">üò¥ ¬øCu√°ntas horas dormiste?</label>
                                <input type="number" step="0.5" class="form-control form-control-custom" 
                                       @bind="dtoActualizacion.HorasSueno" 
                                       min="0" max="24" />
                                <small class="text-muted">Valor anterior: @habito.HorasSueno horas</small>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label form-label-custom">üèÉ ¬øCu√°nto tiempo hiciste ejercicio?</label>
                                <input type="number" step="0.5" class="form-control form-control-custom" 
                                       @bind="dtoActualizacion.HorasActividadFisica" 
                                       min="0" max="24" />
                                <small class="text-muted">Valor anterior: @habito.HorasActividadFisica horas</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-warning-custom" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                <span>Guardando...</span>
                            }
                            else
                            {
                                <span>üíæ Guardar cambios</span>
                            }
                        </button>
                        
                        <button type="button" class="btn btn-secondary-custom" @onclick="VolverAHistorial">
                            ‚Ü©Ô∏è Cancelar
                        </button>
                    </div>
                </EditForm>
                
                @if (!string.IsNullOrEmpty(mensajeExito))
                {
                    <div class="alert alert-success mt-3">
                        ‚úÖ @mensajeExito
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="alert alert-danger mt-3">
                        ‚ùå @mensajeError
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int registroHabitoId { get; set; }
    
    private RegistroHabitoDTO? habito;
    
    [SupplyParameterFromForm]
    private RegistroHabitoActualizarDTO dtoActualizacion { get; set; } = new();
    
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;
    
    protected override async Task OnInitializedAsync()
    {
        await CargarHabito();
    }
    
    private async Task CargarHabito()
    {
        isLoading = true;
        
        try
        {
            habito = await RegistroHabitoService.ObtenerHabitoPorIdAsync(registroHabitoId);
            
            if (habito != null)
            {
                dtoActualizacion.HorasSueno = habito.HorasSueno;
                dtoActualizacion.HorasActividadFisica = habito.HorasActividadFisica;
                Console.WriteLine($"‚úÖ H√°bito cargado: {habito.RegistroHabitoId}");
            }
            else
            {
                mensajeError = $"No se pudo cargar el h√°bito con ID {registroHabitoId}";
                Console.WriteLine($"‚ö†Ô∏è H√°bito no encontrado: {registroHabitoId}");
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error cargando h√°bito: {ex.Message}";
            Console.WriteLine($"‚ùå Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task ActualizarHabito()
    {
        isSubmitting = true;
        mensajeExito = string.Empty;
        mensajeError = string.Empty;
        
        try
        {
            var resultado = await RegistroHabitoService.ActualizarHabitoAsync(registroHabitoId, dtoActualizacion);
            
            if (resultado)
            {
                mensajeExito = "¬°Listo! Actualizamos tu registro";
                await Task.Delay(1000);
                isSubmitting = false;
                VolverAHistorial();
            }
            else
            {
                mensajeError = "Hubo un problema al guardar. Intenta de nuevo.";
                isSubmitting = false;
            }
        }
        catch (Exception ex)
        {
            if (ex.GetType().Name != "NavigationException")
            {
                mensajeError = $"Error: {ex.Message}";
            }
            isSubmitting = false;
        }
    }
    
    private void VolverAHistorial()
    {
        if (habito != null && habito.EstudianteId > 0)
        {
            Navigation.NavigateTo($"/habitos/historial/{habito.EstudianteId}");
        }
        else
        {
            Navigation.NavigateTo("/habitos/historial");
        }
    }
}

