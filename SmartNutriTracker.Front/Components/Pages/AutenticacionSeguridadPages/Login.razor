@page "/login"

<div class="login-container">

    <div class="login-image">
        <img src="\Images\mujer-saltando-cuerda-elementos-estilo-vida-saludable_18591-71803-removebg-preview.png" alt="Imagen Login">
    </div>

    <div class="login-form">
        <div class="login-title">INICIA SESIÓN</div>

        <label>Usuario o Email</label>
        <input type="text" @bind="usuarioEmail" placeholder="Ingrese su usuario o email" class="input" />

        <label>Contraseña</label>
        <input type="password" @bind="contraseña" placeholder="Ingrese su contraseña" class="input" />

        <button class="btn-login" @onclick="IniciarSesion">Iniciar Sesión</button>
    </div>

</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f5f5f5;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .login-container {
        width: 75%; /* un poco más angosto */
        margin: 60px auto;
        background: #f1e9b8; /* FONDO MANTENIDO */
        padding: 40px;
        display: flex;
        gap: 40px;
        align-items: center;
        box-shadow: 0px 6px 18px rgba(0,0,0,0.15);
        border-radius: 0; /* SIN bordes redondeados */
    }

    .login-image img {
        width: 380px;
        max-width: 100%;
        filter: drop-shadow(0px 3px 6px rgba(0,0,0,0.2));
    }

    .login-form {
        flex: 1;
    }

    .login-title {
        font-size: 34px;
        font-weight: bold;
        color: #C2854C;
        margin-bottom: 25px;
        text-align: center;
    }

    label {
        display: block;
        font-size: 16px;
        margin-bottom: 6px;
        color: #4a3c2f;
        font-weight: bold;
    }

    .input {
        width: 100%;
        padding: 14px;
        border-radius: 10px;
        border: 2px solid #d1c7a2;
        margin-bottom: 18px;
        font-size: 16px;
        background: #fffdf4;
        transition: 0.25s;
    }

        .input:focus {
            outline: none;
            border-color: #C2854C;
            box-shadow: 0px 0px 6px rgba(194,133,76,0.5);
        }

    .btn-login {
        background: #C2854C;
        border: none;
        padding: 14px;
        width: 100%; 
        font-size: 17px;
        border-radius: 10px;
        cursor: pointer;
        color: white;
        font-weight: bold;
        transition: 0.25s;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.15);
    }

        .btn-login:hover {
            transform: scale(1.03);
            background: #a3c284;
        }

    @@media(max - width: 900px)

    {
        .login-container

    {
        flex-direction: column;
        text-align: center;
        width: 90%;
    }

    .login-image img {
        width: 260px;
    }

    }
</style>

@code {
    private string usuarioEmail = "";
    private string contraseña = "";

    private void IniciarSesion()
    {
        Console.WriteLine($"Usuario: {usuarioEmail}, Contraseña: {contraseña}");
    }
}
