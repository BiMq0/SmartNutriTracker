@using Microsoft.AspNetCore.Components.Authorization
@using SmartNutriTracker.Front.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SmartNutriTracker.Front</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @foreach (var option in menuOptions)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@option.Link" Match="NavLinkMatch.All">
                    <i class="bi @option.Icon"></i>
                    <span>@option.Title</span>
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private List<MenuOption> menuOptions = new()
{
new MenuOption(){ Title="Home", Icon="bi-house-door-fill", Link="" },
new MenuOption(){ Title="Recomendaciones inteligentes", Icon="bi-lightbulb-fill", Link="recomendaciones" },
new MenuOption(){ Title="Gestión de Usuarios", Icon="bi-people-fill", Link="gestion-usuarios" },
new MenuOption(){ Title="Registrar Estudiante", Icon="bi-person-plus-fill", Link="registro-estudiante" },
new MenuOption(){ Title="Editar Perfil", Icon="bi-pencil-square", Link="estudiantes/editar/1" },
new MenuOption(){ Title="Ver Perfil", Icon="bi-person-circle", Link="perfil" },
new MenuOption(){ Title="Dashboard", Icon="bi-speedometer2", Link="dashboard" },
new MenuOption(){ Title="Alimentos", Icon="bi-egg-fried", Link="alimentos" },
new MenuOption(){ Title="Menús", Icon="bi-clipboard-check-fill", Link="menus" },
};
    protected override async Task OnInitializedAsync()
    {

    }

    private class MenuOption()
    {
        public string Title { get; set; }
        public string Icon { get; set; }
        public string Link { get; set; }
    }
}